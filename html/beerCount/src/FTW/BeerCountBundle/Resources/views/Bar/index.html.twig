{% extends '::base.html.twig' %}

{% block body -%}
    
    <div class="page-header">
        <h1>Bar list</h1>
    </div>

    <div class="row">
        <div class="col">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Location</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('bar_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.description }}</td>
                        <td>{{ entity.location }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('bar_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('bar_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
          </table>
        </div>
      </div>

    <a role="button" class="btn btn-primary btn-lg" href="{{ path('bar_new') }}">Create a new entry</a>

{% endblock %}
