{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Bar</h1>

    <table class="record_properties" ng-controller="BarController as barCtrl" data-url="{{ path('bar_show_api', { 'id': entity.id , '_format': 'json'}) }}">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{[{ barCtrl.barData.bar.name }]}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{[{ barCtrl.barData.bar.description }]}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{[{ barCtrl.barData.bar.location }]}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('bar') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('bar_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}